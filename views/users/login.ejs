<link rel="stylesheet" href="/css/login.css" />

<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <form
        action="/users/login"
        method="post"
        onsubmit="submitForm(event, this)"
        class="p-4 bg-light border border-success rounded w-100 mw-100"
      >
        <div id="message" class="text-danger mb-3"></div>
        <div class="form-group mb-3">
          <label for="emailInput" class="text-success">Email address</label>
          <input
            type="email"
            id="emailInput"
            name="email"
            placeholder="Enter email"
            class="form-control border-success"
          />
        </div>
        <div class="form-group mb-3">
          <label for="passwordInput" class="text-success">Password</label>
          <input
            type="password"
            id="passwordInput"
            name="password"
            placeholder="Enter password"
            class="form-control border-success"
          />
        </div>
        <button type="submit" class="btn btn-outline-success w-100 mb-3">
          Login <i class="fa-solid fa-right-to-bracket"></i>
        </button>

        <!-- Register Link -->
        <div class="mt-3 text-center">
          <a href="/users" class="text-success"
            >Don't have an account? Register</a
          >
        </div>
      </form>
    </div>
  </div>
</div>
