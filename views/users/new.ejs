<link rel="stylesheet" href="/css/login.css" />

<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <form
        action="/users"
        method="post"
        onsubmit="submitForm(event, this)"
        class="p-4 bg-light border border-success roundedw w-100 mw-100"
      >
        <div id="message" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
          <label for="usernameInput" class="text-success">Username</label>
          <input
            type="text"
            id="usernameInput"
            name="username"
            placeholder="Username"
            class="form-control border-success"
          />
        </div>
        <div class="form-group mb-3">
          <label for="emailInput" class="text-success">Email</label>
          <input
            type="text"
            id="emailInput"
            name="email"
            placeholder="Email"
            class="form-control border-success"
          />
        </div>
        <div class="form-group mb-3">
          <label for="passwordInput" class="text-success">Password</label>
          <input
            type="password"
            id="passwordInput"
            name="password"
            placeholder="Password"
            class="form-control border-success"
          />
        </div>
        <div class="form-group mb-3">
          <label for="confirmPasswordInput" class="text-success"
            >Confirm Password</label
          >
          <input
            type="password"
            id="confirmPasswordInput"
            name="confirmPassword"
            placeholder="Confirm Password"
            class="form-control border-success"
          />
        </div>
        <button type="submit" class="btn btn-outline-success w-100 mb-3">
          Create User <i class="fa-solid fa-plus"></i>
        </button>

        <!-- Link to Login Page -->
        <div class="mt-3 text-center">
          <a href="/users/login" class="text-success"
            >Already have an account? Login</a
          >
        </div>
      </form>
    </div>
  </div>
</div>
