<link rel="stylesheet" href="/css/home.css" />
<link rel="stylesheet" href="/css/login.css" />

<!-- Navigation Bar -->
<nav class="navbar navbar-expand-lg navbar-custom">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">GameSite</a>
    <a class="btn btn-play-game" href="/game">Play Game</a>
    <div class="ml-auto d-flex align-items-center">
      <span class="coins me-3">Coins: <%= user.coins %></span>
      <a class="nav-link me-3" href="#"><%= user.username %></a>
      <button class="btn btn-logout">Logout</button>
    </div>
  </div>
</nav>

<!-- Main Content -->
<div class="container mt-4">
  <!-- Player's Highest Score -->
  <div class="row mb-4">
    <div class="col">
      <h2 class="high-score">
        Your Highest Score: <span id="highScore"><%= user.highScore %></span>
      </h2>
    </div>
  </div>

  <!-- Game Leaderboard -->
  <div class="row">
    <div class="col">
      <h3 class="leaderboard-title">Game Leaderboard</h3>
      <ul class="list-group">
        <!-- List of players and scores -->
        <li
          class="list-group-item d-flex justify-content-between align-items-center"
        >
          Player1
          <span class="badge badge-primary badge-pill text-dark"
            >Score: 15000</span
          >
        </li>
        <!-- More players... -->
      </ul>
    </div>
  </div>
</div>
